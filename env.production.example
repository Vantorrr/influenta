# Production Environment Variables
# Скопируйте этот файл в .env и заполните своими значениями

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=influencer_user
DB_PASSWORD=your_secure_password_here
DB_NAME=influencer_platform

# Backend
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
PORT=3001

# Frontend URLs
FRONTEND_URL=https://your-domain.com
API_URL=https://your-domain.com/api
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_NAME=your_bot_name
NEXT_PUBLIC_TELEGRAM_BOT_NAME=your_bot_name

# Admin Configuration
# Telegram IDs администраторов (через запятую, первый - супер админ)
ADMIN_TELEGRAM_IDS=741582706,8141463258
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_secure_admin_password

# SSL Certificates (для nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
SENTRY_DSN=your_sentry_dsn_optional
LOG_LEVEL=info

# Redis (для будущего масштабирования)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password


